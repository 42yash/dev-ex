FROM node:20-alpine

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm i

# Copy the rest of the application
COPY . .

# Expose the API port
EXPOSE 8080

# Start the development server with hot reload
CMD ["npm", "run", "dev"]
