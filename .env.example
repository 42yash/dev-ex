# Dev-Ex Platform Environment Configuration
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development
PYTHON_ENV=development

# API Keys (REQUIRED)
GEMINI_API_KEY=your-gemini-api-key-here

# Authentication
JWT_SECRET=your-secure-jwt-secret-min-32-characters
JWT_REFRESH_SECRET=your-secure-refresh-secret-min-32-characters
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=devex
DB_USER=devex
DB_PASSWORD=devex
DATABASE_URL=postgresql://devex:devex@postgres:5432/devex

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# n8n Workflow Automation
N8N_USER=admin
N8N_PASSWORD=admin
N8N_ENCRYPTION_KEY=your-n8n-encryption-key

# Services Configuration
API_GATEWAY_PORT=8080
AI_SERVICE_PORT=50051
FRONTEND_PORT=3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Vector Database
EMBEDDING_MODEL=text-embedding-ada-002
VECTOR_DIMENSION=1536
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# AI Configuration
AI_MODEL=gemini-pro
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4096
AI_TIMEOUT_SECONDS=30

# Session Configuration
SESSION_TTL_SECONDS=86400
MAX_SESSIONS_PER_USER=10

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,txt,md,json

# Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true
PROMETHEUS_PORT=9090

# External Services
WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Development Settings
DEBUG=true
VERBOSE_LOGGING=true
HOT_RELOAD=true